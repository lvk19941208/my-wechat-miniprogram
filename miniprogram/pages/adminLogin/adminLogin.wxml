<view class="container">
  <!-- 背景装饰 -->
  <view class="bg-circle circle-1"></view>
  <view class="bg-circle circle-2"></view>

  <!-- 标题 -->
  <view class="title-container">
    <text class="title">帮教管理员登录</text>
  </view>

  <!-- 输入区域 -->
  <view class="input-container">
    <view class="input-wrapper">
      <input class="input" placeholder="请输入账号" bindinput="onUsernameInput" value="{{username}}" />
    </view>
    <view class="input-wrapper">
      <input class="input" placeholder="请输入密码" password="true" bindinput="onPasswordInput" value="{{password}}" />
    </view>
  </view>

  <!-- 按钮区域 -->
  <view class="button-container">
    <button class="btn admin-btn" bindtap="onAdminLogin">登录</button>
    <button class="btn back-btn" bindtap="goBack">返回</button>
  </view>

  <!-- 底部提示 -->
  <text class="footer-text">携手共创美好未来</text>
</view>