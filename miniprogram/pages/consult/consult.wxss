.consult-container {
  padding: 40rpx 30rpx;
  background: #f5fbff;
  min-height: 100vh;
}

.consult-banner {
  text-align: center;
  margin-bottom: 60rpx;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.banner-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.consult-grid {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.consult-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  padding: 30rpx;
  transition: transform 0.2s;
}

.consult-card:active {
  transform: scale(0.98);
}

.card-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}

.card-text {
  flex: 1;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2a4b7c;
}

.card-desc {
  font-size: 26rpx;
  color: #888;
  margin-top: 8rpx;
}

.consult-footer {
  margin-top: 80rpx;
  text-align: center;
  color: #aaa;
  font-size: 24rpx;
}
