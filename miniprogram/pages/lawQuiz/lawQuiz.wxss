.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #87CEEB 0%, #ADD8E6 100%);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-container {
  text-align: center;
  margin: 20rpx 0 40rpx;
}

.title {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.question-container {
  width: 90%;
  margin-bottom: 40rpx;
}

.question-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.question-text {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.custom-radio-group {
  display: flex;
  flex-direction: column;
}

.custom-radio {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  padding: 10rpx 0;
}

.radio-circle {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #666;
  border-radius: 50%;
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  background: #fff;
}

.selected {
  border-color: #32CD32;
  background: #32CD32;
}

.inner-circle {
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  border-radius: 50%;
}

.custom-radio text {
  font-size: 30rpx;
  color: #444;
  line-height: 44rpx;
}

.submit-btn {
  width: 60%;
  padding: 28rpx;
  background: linear-gradient(90deg, #32CD32 0%, #66CDAA 100%);
  color: #fff;
  font-size: 36rpx;
  border-radius: 60rpx;
  margin-top: 40rpx;
}

.result {
  text-align: center;
  margin-top: 40rpx;
}

.result text {
  font-size: 36rpx;
  color: #fff;
  display: block;
  margin-bottom: 20rpx;
}

.fail-text {
  color: #FF4500;
}