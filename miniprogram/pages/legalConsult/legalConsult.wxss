.legal-consult-page {
  padding: 40rpx 30rpx;
  background-color: #f7fbff;
  min-height: 100vh;
}

.header-image {
  width: 100%;
  height: 280rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.intro-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2a4b7c;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
  padding: 0 20rpx;
}

.card-grid {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.option-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  padding: 30rpx;
  transition: transform 0.2s;
}

.option-card:active {
  transform: scale(0.98);
}

.card-img {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2a4b7c;
}

.card-desc {
  font-size: 26rpx;
  color: #888;
  margin-top: 8rpx;
}
