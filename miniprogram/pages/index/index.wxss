.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #87CEEB 0%, #ADD8E6 100%);
  position: relative;
  overflow: hidden;
  padding: 40rpx;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  pointer-events: none;
}

.circle-1 {
  width: 350rpx;
  height: 350rpx;
  top: -80rpx;
  left: -80rpx;
  animation: float 5s infinite ease-in-out;
}

.circle-2 {
  width: 280rpx;
  height: 280rpx;
  bottom: -60rpx;
  right: -60rpx;
  animation: float 7s infinite ease-in-out reverse;
}

.title-container {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 50rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
  animation: fadeIn 1s ease-in;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 16rpx;
  animation: fadeIn 1.2s ease-in;
}

.button-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn {
  width: 70%;
  padding: 28rpx;
  margin-bottom: 32rpx;
  border-radius: 60rpx;
  font-size: 36rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s, opacity 0.3s;
}

.btn:hover {
  transform: scale(1.03);
}

.primary-btn {
  background: linear-gradient(90deg, #32CD32 0%, #66CDAA 100%);
}

.secondary-btn {
  background: linear-gradient(90deg, #1E90FF 0%, #87CEFA 100%);
}

.notice-btn {
  background: linear-gradient(90deg, #FFA500 0%, #FFD700 100%);
}

.footer-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 40rpx;
  animation: fadeIn 1.8s ease-in;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-25rpx); }
}

@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(15rpx); }
  100% { opacity: 1; transform: translateY(0); }
}