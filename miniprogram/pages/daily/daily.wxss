.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #87CEEB 0%, #ADD8E6 100%);
  position: relative;
  overflow: hidden;
  padding: 40rpx 20rpx;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  pointer-events: none;
}

.circle-1 {
  width: 350rpx;
  height: 350rpx;
  top: -80rpx;
  left: -80rpx;
  animation: float 5s infinite ease-in-out;
}

.circle-2 {
  width: 280rpx;
  height: 280rpx;
  bottom: -60rpx;
  right: -60rpx;
  animation: float 7s infinite ease-in-out reverse;
}

.title-container {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 50rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
  animation: fadeIn 1s ease-in;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 16rpx;
  animation: fadeIn 1.2s ease-in;
}

.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  width: 90%;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.textarea {
  width: 100%;
  height: 360rpx;
  padding: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #555;
  background: #fff;
  margin-bottom: 30rpx;
  transition: border-color 0.3s;
}

.textarea:focus {
  border-color: #66CDAA;
}

.btn {
  width: 100%;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  color: #fff;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s, opacity 0.3s;
  text-align: center;
}

.btn:hover {
  transform: scale(1.03);
}

.primary-btn {
  background: linear-gradient(90deg, #32CD32 0%, #66CDAA 100%);
}

.back-btn {
  background: linear-gradient(90deg, #A9A9A9 0%, #D3D3D3 100%);
  width: 70%;
  margin: 0 auto;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-25rpx); }
}

@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(15rpx); }
  100% { opacity: 1; transform: translateY(0); }
}