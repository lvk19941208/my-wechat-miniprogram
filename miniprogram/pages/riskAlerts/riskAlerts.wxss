.container {
  padding: 20rpx;
  background-color: #f0f4f8;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.no-data {
  text-align: center;
  color: #999;
  font-size: 32rpx;
  margin-top: 100rpx;
}

.alert-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.alert-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.alert-status {
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.alert-status.active {
  color: #ff4d4f;
  background-color: #fff1f0;
}

.alert-status.resolved {
  color: #52c41a;
  background-color: #f6ffed;
}

.alert-detail {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.alert-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.resolve-btn {
  font-size: 24rpx;
  color: #fff;
  background-color: #1890ff;
  border: none;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.footer {
  margin-top: 40rpx;
  text-align: center;
}

.back-btn {
  width: 80%;
  background-color: #d9d9d9;
  color: #333;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}