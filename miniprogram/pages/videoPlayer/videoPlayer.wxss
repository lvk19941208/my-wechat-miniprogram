.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

.video-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-player {
  width: 100%;
  height: 500rpx;
}

.loading {
  text-align: center;
  margin: 20rpx 0;
  font-size: 32rpx;
  color: #666;
}

.error-text {
  text-align: center;
  font-size: 32rpx;
  color: #ff0000;
  margin-top: 20rpx;
}